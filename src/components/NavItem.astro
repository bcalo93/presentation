---
import type { SvgComponent } from 'astro/types';

interface Props {
  asset: SvgComponent;
  href: string;
  srLabel?: string;
}

const { asset: Asset, href, srLabel } = Astro.props;
---

<div class="nav-item">
  <a href={href}>
    <Asset aria-label={srLabel} />
  </a>
</div>

<style lang="scss">
  $duration: 0.3s;
  $delay: 0.15s;

  .nav-item {
    a {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 0.5em;
      border-radius: 4em;
      transition: transform $duration ease $delay, background-color $duration ease $delay;
    }

    a:hover {
      transform: scale(1.3, 1.3);
      background-color: var(--color-tertiary);
    }
  }

</style>