---
import type { HTMLAttributes, SvgComponent } from 'astro/types';

interface Props extends HTMLAttributes<'a'> {
  asset: SvgComponent;
  srLabel?: string;
}

const { asset: Asset,  srLabel, ...anchorProps } = Astro.props;
---

<div class="nav-item">
  <a {...anchorProps}>
    <Asset aria-label={srLabel} />
  </a>
</div>

<style lang="scss">
  $duration: 0.3s;
  $delay: 0.15s;

  .nav-item {
    a {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 0.5rem;
      border-radius: 4rem;
      transition: transform $duration ease $delay, background-color $duration ease $delay;
    }

    a:hover {
      transform: scale(1.3, 1.3);
      background-color: var(--color-tertiary);
    }
  }

</style>