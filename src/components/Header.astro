---
import Home from '@/assets/svgs/home.svg';
import Person from '@/assets/svgs/person.svg';
import WorkHistory from '@/assets/svgs/workhistory.svg';
import Folder from '@/assets/svgs/folder.svg';
import NavItem from '@/components/NavItem.astro'
---

<header class="center-content">
  <nav class="center-content">
    <NavItem asset={Home} href="/" />
    <!--TODO -->
    <NavItem asset={Person} href="/" />
    <NavItem asset={WorkHistory} href="/" />
    <NavItem asset={Folder} href="/" />
  </nav>  
</header>

<style>
  header {
    grid-area: header;
    align-self: end;

    nav {
      gap: 0.3rem;
      padding: 0.5rem;
      background-color: var(--color-secondary);
      border-radius: 0.7rem;
    }
  }
</style>