---
import Home from '@/assets/home.svg';
import Person from '@/assets/person.svg';
import WorkHistory from '@/assets/workhistory.svg';
import Folder from '@/assets/folder.svg';
import NavItem from '@/components/NavItem.astro'
---

<header class="center-content">
  <nav class="center-content">
    <NavItem asset={Home} href="/" />
    <!--TODO -->
    <NavItem asset={Person} href="/" />
    <NavItem asset={WorkHistory} href="/" />
    <NavItem asset={Folder} href="/" />
  </nav>  
</header>

<style>
  header {
    position: fixed;
    top: 1.5em;
    width: 100%;

    nav {
      gap: 0.3em;
      padding: 0.5em;
      background-color: var(--color-secondary);
      width: fit-content;
      border-radius: 1em;
    }
  }
</style>